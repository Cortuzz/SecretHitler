<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#514D4D">
    <TextView
        android:layout_weight="1"
        android:layout_gravity="center"
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playerName"
        android:textSize="32sp" />

    <RelativeLayout
        android:layout_weight="18"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#514D4D">

        <ImageView
            android:visibility="invisible"
            android:layout_gravity="center"
            android:id="@+id/imageFascist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/role_fascist" />

        <ImageView
            android:id="@+id/imageLiberal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            app:srcCompat="@drawable/role_liberal" />

        <ImageView
            android:id="@+id/imageHitler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            app:srcCompat="@drawable/role_hitler" />

        <TextView
            android:id="@+id/fascist1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teammates"
            android:layout_alignEnd="@+id/teammates"
            android:layout_marginTop="-140dp"
            android:layout_marginEnd="0dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/teammates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="149dp"
            android:layout_marginBottom="185dp"
            android:text="Teammates:" />

        <TextView
            android:id="@+id/hitler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teammates"
            android:layout_alignEnd="@+id/teammates"
            android:layout_marginTop="-170dp"
            android:layout_marginEnd="0dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/fascist2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teammates"
            android:layout_alignEnd="@+id/teammates"
            android:layout_marginTop="-110dp"
            android:layout_marginEnd="0dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/fascist3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teammates"
            android:layout_alignEnd="@+id/teammates"
            android:layout_marginTop="-80dp"
            android:layout_marginEnd="0dp"
            android:visibility="invisible" />
    </RelativeLayout>

    <Button
        android:layout_gravity="center"
        android:layout_weight="1"
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="nextScreen"
        android:text="@string/next"
        android:textSize="26sp" />


</LinearLayout>